{% extends 'base.html.twig' %}

{% block title %}Liste des lieux{% endblock %}

{% block body %}
    <h1>Liste des {{ resource }}</h1>

    <ul class="list-group">
    {% for location in locations %}
        <li class="list-group-item">{{ location.designation }}
            {% if location.website %}
            - <a href="">{{ location.website }}</a>
            {% endif %}
        </li>
    {% endfor %}
    </ul>
{% endblock %}
